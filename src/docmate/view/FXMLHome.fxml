<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<FlowPane hgap="16.0" vgap="16.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="docmate.controller.FXMLHomeController">
    <padding>
        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
    </padding>
    <HBox alignment="CENTER" style="-fx-background-radius: 8; -fx-background-color: #FFFFFF;">
        <FlowPane.margin>
            <Insets/>
        </FlowPane.margin>
        <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
        </padding>
        <BorderPane>
            <top>
                <HBox alignment="CENTER" prefWidth="320.0" BorderPane.alignment="CENTER">
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Total Patient">
                        <font>
                            <Font name="System Bold" size="18.0"/>
                        </font>
                    </Text>
                    <BorderPane.margin>
                        <Insets top="8.0"/>
                    </BorderPane.margin>
                </HBox>
            </top>
            <center>
                <HBox alignment="CENTER" prefHeight="140.0" prefWidth="320.0" BorderPane.alignment="CENTER">
                    <StackPane>
                        <Text fx:id="totalPatientText" fill="#48ac3c" strokeType="OUTSIDE" strokeWidth="0.0" text="0"
                              visible="false">
                            <font>
                                <Font size="72.0"/>
                            </font>
                            <StackPane.margin>
                                <Insets bottom="8.0"/>
                            </StackPane.margin>
                        </Text>
                        <ProgressIndicator fx:id="totalPatientProgress"/>
                    </StackPane>
                </HBox>
            </center>
            <bottom>
                <Button fx:id="addPatientButton" mnemonicParsing="false" prefWidth="320.0" text="Add New Patient"
                        BorderPane.alignment="CENTER"/>
            </bottom>
        </BorderPane>
        <effect>
            <DropShadow color="SILVER" height="8.0" offsetY="1.0" radius="3.5" width="8.0"/>
        </effect>
    </HBox>
    <HBox alignment="CENTER" layoutX="26.0" layoutY="26.0"
          style="-fx-background-radius: 8; -fx-background-color: #FFFFFF;">
        <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
        </padding>
        <BorderPane>
            <top>
                <HBox alignment="CENTER" prefWidth="320.0" BorderPane.alignment="CENTER">
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Total Prescription">
                        <font>
                            <Font name="System Bold" size="18.0"/>
                        </font>
                    </Text>
                    <BorderPane.margin>
                        <Insets top="8.0"/>
                    </BorderPane.margin>
                </HBox>
            </top>
            <center>
                <HBox alignment="CENTER" prefHeight="140.0" prefWidth="320.0" BorderPane.alignment="CENTER">
                    <StackPane>
                        <Text fx:id="totalPrescriptionText" fill="#48ac3c" strokeType="OUTSIDE" strokeWidth="0.0"
                              text="0" visible="false">
                            <font>
                                <Font size="72.0"/>
                            </font>
                            <StackPane.margin>
                                <Insets bottom="8.0"/>
                            </StackPane.margin>
                        </Text>
                        <ProgressIndicator fx:id="totalPrescriptionProgress"/>
                    </StackPane>
                </HBox>
            </center>
            <bottom>
                <Button fx:id="addPrescriptionButton" mnemonicParsing="false" prefWidth="320.0"
                        text="Add New Prescription" BorderPane.alignment="CENTER"/>
            </bottom>
        </BorderPane>
        <effect>
            <DropShadow color="SILVER" height="8.0" offsetY="1.0" radius="3.5" width="8.0"/>
        </effect>
    </HBox>
    <HBox alignment="CENTER" layoutX="26.0" layoutY="289.0"
          style="-fx-background-radius: 8; -fx-background-color: #FFFFFF;">
        <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
        </padding>
        <BorderPane>
            <top>
                <HBox alignment="CENTER" prefWidth="320.0" BorderPane.alignment="CENTER">
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Total Medicine">
                        <font>
                            <Font name="System Bold" size="18.0"/>
                        </font>
                    </Text>
                    <BorderPane.margin>
                        <Insets top="8.0"/>
                    </BorderPane.margin>
                </HBox>
            </top>
            <center>
                <HBox alignment="CENTER" prefHeight="140.0" prefWidth="320.0" BorderPane.alignment="CENTER">
                    <StackPane>
                        <Text fx:id="totalMedicineText" fill="#48ac3c" strokeType="OUTSIDE" strokeWidth="0.0" text="0"
                              visible="false">
                            <font>
                                <Font size="72.0"/>
                            </font>
                            <StackPane.margin>
                                <Insets bottom="8.0"/>
                            </StackPane.margin>
                        </Text>
                        <ProgressIndicator fx:id="totalMedicineProgress"/>
                    </StackPane>
                </HBox>
            </center>
            <bottom>
                <Button fx:id="addMedicineButton" mnemonicParsing="false" prefWidth="320.0" text="Add New Medicine"
                        BorderPane.alignment="CENTER"/>
            </bottom>
        </BorderPane>
        <effect>
            <DropShadow color="SILVER" height="8.0" offsetY="1.0" radius="3.5" width="8.0"/>
        </effect>
    </HBox>
</FlowPane>
